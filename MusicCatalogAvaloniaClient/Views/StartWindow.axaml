<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="300"
        x:Class="MusicCatalogAvaloniaClient.Views.StartWindow"
        Title="Start" MinHeight="200" MinWidth="300"
        Height="200" Width="800"
        Background="Beige"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Label
            Content="Connection address:"
            Height="30"
            Margin="10,25,13,0"
            VerticalAlignment="Top"/>
        <TextBox
            TextWrapping="Wrap"
            Text="{Binding ConnectionAddress}"
            Margin="10,70,50,0"
            Height="30"
            VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button
            Content="Ok"
            Background="MediumSlateBlue"
            Command="{Binding OkCommand}"
            Margin="600,130,010,0"
            Width="70"
            VerticalAlignment="Top"/>
        <Button
            Content="Cancel"
            
            Command="{Binding CancelCommand}"
            Height="30"
            Margin="0,130,10,0"
            Width="70"
            VerticalAlignment="Top" Grid.Column="1"/>

    </Grid>
</Window>
